{
  "name": "notifme-sdk",
  "version": "0.0.1",
  "description": "Unified notification SDK (emails, SMS, pushes, webpushes...) for Node.js",
  "main": "index.js",
  "repository": "https://github.com/notifme/notifme-sdk",
  "author": "Notif.me",
  "license": "MIT",
  "scripts": {
    "build": "babel src --out-dir lib && yarn run build-dot-flow",
    "build-dot-flow": "find ./src -name '*.js' | while read filepath; do cp $filepath `echo $filepath | sed 's/\\/src\\//\\/lib\\//g'`.flow; done",
    "dev": "babel-node src/index.js",
    "lint": "yarn run flow && standard",
    "prepublish": "yarn run build"
  },
  "files": [
    "lib"
  ],
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**",
      "**/lib/**"
    ]
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "flow-bin": "0.51.0",
    "standard": "10.0.2"
  },
  "dependencies": {
    "babel-runtime": "6.23.0"
  }
}
